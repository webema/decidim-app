<section class="wrapper-home home-section">
  <div class="row" id="highlighted-blog-posts">
    <h3 class="section-heading">Aktuelles</h3>
    <div class="row collapse">
      <div class="row small-up-1 medium-up-2 large-up-3 card-grid">
        <% highlighted_blog_posts.each do |blog_post| %>
          <div class="column">
            <article class="card card--process card--mini">
              <% if false # blog_post.hero_image.url.present? %>
                <%= link_to decidim_participatory_processes.participatory_process_group_path(group), class: "card__link" do %>
                  <%= image_tag group.hero_image.url, alt: title_for(group), class: "card__image" %>
                <% end %>
              <% end %>

              <div class="card__content">
                <%= link_to post_path(blog_post), class: "card__link" do %>
                  <h4 class="card__title"><%= blog_post.title %></h4>
                <% end %>
                <div class="card__text">
                  <div class="card__text--paragraph">
                    <%= body_for(blog_post) %>
                  </div>
                </div>
              </div>
            </article>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
