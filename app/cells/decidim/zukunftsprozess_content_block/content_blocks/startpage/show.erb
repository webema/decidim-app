  <div class="reveal" id="helpSectionModal" data-reveal="true"></div>
  <div class="container">
    <div class="row small-up-1 medium-up-2">
      <div class="column">
        <div class="cta">
          <h1>
            <span>
              <span class="blue">Kirche</span> <span class="green">gemeinsam</span> <span class="red">gestalten</span>
            </span>
