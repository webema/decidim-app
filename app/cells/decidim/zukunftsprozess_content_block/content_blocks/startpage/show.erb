              <%= truncate(recent_blog_post.title, length: 50) %>
              <div class="text-right">
                <%= link_to "weiterlesen #{icon('chevron-right', class: 'inline')}", post_path(recent_blog_post) %>
              </div>
            </div>
          </div>
        <%- end %>
      </div>
    </div>



    <div class="row small-up-1 medium-up-3 buttons">
