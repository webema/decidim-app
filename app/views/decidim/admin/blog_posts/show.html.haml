.row
  .card.card--post
    .card__content
      .card-divider
        %h2.card-title
          Blogpost

      .card-section
        %h2.card__title
          = @blog_post.title

        .card__author
          = l(@blog_post.created_at, format: :short)


      = decidim_sanitize_editor(@blog_post.body.html_safe)

  .button--double
    = link_to 'Zurück', posts_path, class: 'button'
    = link_to 'Bearbeiten', edit_post_path(@blog_post), class: 'button'
    = button_to 'Löschen', post_path(@blog_post), method: 'delete', data: { confirm: 'dsfdfsdfdsf' }, class: 'button'
