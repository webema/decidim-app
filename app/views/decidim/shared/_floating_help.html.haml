- return if request.path[1..-1].split('/').size > 1

.floating-helper-container{"data-help-id" => "floating-help-#{id}"}
  #floating-helper-block.floating-helper__wrapper.row.column{"data-toggler" => ".hide"}
    .floating-helper__content
      .floating-helper__content-inner
        %div
          %h2
            %span
              = t("decidim.menu.#{id}")
          %p
            %span
              = strip_tags(Nokogiri::HTML.parse(content).css('p').first.text)


          = link_to 'Mehr erfahren', '/pages/help', data: { open: 'pageModal', open_url: '/pages/help' }

.reveal#pageModal{ data: { reveal: true } }
